<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigationgraph"
    app:startDestination="@id/carSearch">

    <fragment
        android:id="@+id/BTConnected"
        android:name="com.example.carapp.BTConnected"
        android:label="BTConnected"
        tools:layout="@layout/fragment_first">
        <argument
            android:name="BluetoothLink"
            app:argType="com.example.carapp.VehicleConnections.BluetoothConnection" />
    </fragment>


    <fragment
        android:id="@+id/carSearch"
        android:name="com.example.carapp.CarSearch"
        android:label="fragment_car_search"
        tools:layout="@layout/fragment_car_search" >
        <action
            android:id="@+id/linkEstablished"
            app:destination="@id/BTConnected" />
    </fragment>


</navigation>